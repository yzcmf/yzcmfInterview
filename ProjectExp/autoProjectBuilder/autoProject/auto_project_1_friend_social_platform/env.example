# =============================================================================
# 社交平台环境变量配置
# =============================================================================

# =============================================================================
# 应用配置
# =============================================================================
NODE_ENV=development
PORT=8000
API_VERSION=v1

# =============================================================================
# 数据库配置
# =============================================================================
DATABASE_URL=postgresql://postgres:postgres123@localhost:5432/social_platform
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=social_platform
DATABASE_USER=postgres
DATABASE_PASSWORD=postgres123

# =============================================================================
# Redis配置
# =============================================================================
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# =============================================================================
# JWT配置
# =============================================================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# =============================================================================
# 微服务配置
# =============================================================================
AI_SERVICE_URL=http://localhost:8001
CHAT_SERVICE_URL=http://localhost:8002
FRONTEND_URL=http://localhost:3000

# =============================================================================
# 第三方服务配置
# =============================================================================

# 邮件服务 (SendGrid)
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@yourdomain.com

# 短信服务 (Twilio)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# 文件存储 (AWS S3)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-s3-bucket-name

# 推送通知 (Firebase)
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_PRIVATE_KEY=your-firebase-private-key
FIREBASE_CLIENT_EMAIL=your-firebase-client-email

# AI服务配置
OPENAI_API_KEY=your-openai-api-key
HUGGINGFACE_API_KEY=your-huggingface-api-key

# =============================================================================
# 监控和日志配置
# =============================================================================
ELASTICSEARCH_URL=http://localhost:9200
KIBANA_URL=http://localhost:5601
PROMETHEUS_URL=http://localhost:9090
GRAFANA_URL=http://localhost:3001

# 日志级别
LOG_LEVEL=info
LOG_FORMAT=json

# =============================================================================
# 安全配置
# =============================================================================
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# 加密密钥
ENCRYPTION_KEY=your-32-character-encryption-key

# =============================================================================
# 业务配置
# =============================================================================
MAX_MATCHES_PER_DAY=50
MIN_AGE=18
MAX_AGE=100
MAX_DISTANCE_KM=100

# 匹配算法配置
MATCHING_ALGORITHM_VERSION=v1
SIMILARITY_THRESHOLD=0.7

# =============================================================================
# 开发配置
# =============================================================================
DEBUG=true
ENABLE_SWAGGER=true
ENABLE_GRAPHIQL=true

# 测试配置
TEST_DATABASE_URL=postgresql://postgres:postgres123@localhost:5432/social_platform_test
TEST_REDIS_URL=redis://localhost:6379/1 